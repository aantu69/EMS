<div class="col-xs-12" ng-controller="ListCtlr">
    <div class="box">
        <div class="box-header">
            <div class="row">
                <div class="col-sm-6">
                    <div class="dataTables_length"><h3 class="box-title">User List</h3></div>
                </div>
                <div class="col-sm-6 dataTables_length" style="text-align: right;">
                    <div class="dataTables_length">@Html.ActionLink("New User", "Create", new { controller = "Users" }, new { @class = "btn btn-success" })</div>
                </div>
            </div>
        </div>
        <div class="box-body">
            <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                @Html.Partial("_TableSearchingPartial")
                <div class="row">
                    <div class="col-sm-12 table-responsive">
                        <table class="table table-bordered table-hover dataTable ">
                            <thead>
                                <tr>
                                    <th><a href="" ng-click="sort('UserName')">User Name</a></th>
                                    <th><a href="" ng-click="sort('Email')">Email</a></th>
                                    <th><a href="" ng-click="sort('FirstName')">First Name</a></th>
                                    <th><a href="" ng-click="sort('LastName')">Last Name</a></th>
                                    <th><a href="">Roles</a></th>
                                    <th><a href="">Actions</a></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="user in users">
                                    <td>{{user.UserName}}</td>
                                    <td>{{user.Email}}</td>
                                    <td>{{user.FirstName}}</td>
                                    <td>{{user.LastName}}</td>
                                    <td><span ng-repeat="role in user.RoleNames">{{role}}, </span></td>
                                    <td>
                                        <input type="button" class="btn btn-info" value="{{btnEditText}}" ng-click="redirect(user.Id)" />
                                        <input type="button" class="btn btn-danger" value="{{btnDeleteText}}" ng-click="removeData(user.Id)" />
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                @Html.Partial("_PagingPartial")
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Areas/SuperAdmin/Scripts/Controllers/Users.js"></script>
}