@{
    ViewBag.Title = "Create";
}

<div class="col-md-6" ng-app="employeeModule" ng-controller="EmployeeAddCtlr">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Employee Creation</h3>
        </div>
        <form class="form-horizontal">
            <div class="box-body">
                <div class="form-group">
                    <label for="txtName" class="col-sm-2 control-label">Name</label>

                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="txtName" placeholder="Name" ng-model="Name">
                    </div>
                </div>
                <div class="form-group">
                    <label for="txtAddress" class="col-sm-2 control-label">Address</label>

                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="txtAddress" placeholder="Address" ng-model="Address">
                    </div>
                </div>
            </div>
            <div class="box-footer">
                @Html.ActionLink("Cancel", "Index", new { controller = "Employees" }, new { @class= "btn btn-default" })
                <input type="button" class="btn btn-info pull-right" value="Save" ng-click="addData()" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Areas/SuperAdmin/Scripts/Controllers/Employees.js")
}