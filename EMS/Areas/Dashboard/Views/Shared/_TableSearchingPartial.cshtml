<div class="row">
    <div class="col-sm-6">
        <div class="dataTables_length" id="example1_length">
            Show:
            <select ng-model="pagingInfo.pageSize" 
                    ng-options="data for data in pageSizeOption" 
                    ng-change="filterPage(pagingInfo.pageSize)" 
                    name="example1_length" aria-controls="example1" 
                    class="form-control input-sm">
            </select>
