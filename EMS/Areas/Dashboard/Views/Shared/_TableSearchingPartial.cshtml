                <option ng-repeat="noOfPage in pageSizeOption" value="{{noOfPage}}">{{noOfPage}}</option>
            </select>*@
        </div>
    </div>
    <div class="col-sm-6">
        <div id="example1_filter" class="dataTables_filter">
            <form class="form-inline" ng-submit="search()" role="form">
                <div class="form-group">
                    <input type="text" class="form-control input-sm" ng-model="pagingInfo.search" ng-change="search()" placeholder="Search...">
                    <button type="submit" class="btn btn-info btn-sm"><strong>Search</strong></button>
                </div>
            </form>
        </div>
    </div>
